<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Calculator" parent="Base.Theme.Calculator" >
    </style>

    <style name="MyButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:elevation">0dp</item>

    </style>

    <style name="MyButtonTheme.OperatorButton" parent="MyButtonTheme" >
        <item name="android:background">@drawable/operator_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonTheme.NumberButton" parent="MyButtonTheme">
        <item name="android:background">@drawable/number_background</item>
        <item name="android:textColor">@color/brown</item>
    </style>

</resources>